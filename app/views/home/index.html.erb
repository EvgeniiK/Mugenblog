<div class="row">
  <div class="col-lg-9">
    <div class="well sidebar-nav" style="text-align: center;">
      <p style="font-size: medium;"><%= t(:greeting) %></p>
    </div>
    <%= bootstrap_flash %>
  </div>
  <div class="col-lg-3">
    <div class="well sidebar-nav">
      <% if current_user.present? %>
        <h3><%= "Hello #{current_user.username}" %></h3>
