        <span id='sign-in-form'><%= render 'devise/sessions/new' %></span>
        <span id='sign-up-form' class='hidden'><%= render 'devise/registrations/form' %></span>
      <% end %>
      <ul class="nav nav-list">

      </ul>
    </div><!--/.well -->
  </div><!--/span-->
</div><!--/row-->


    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#hints">Hints</a></li>
      <li><a data-toggle="tab" href="#articles">Articles</a></li>
    </ul>

    <div class="tab-content">
      <div id="hints" class="tab-pane fade in active">
        <%= render 'hints/index' %>
      </div>

      <div id="articles" class="tab-pane fade">
        <%= render 'articles/index' %>
      </div>
</div>
