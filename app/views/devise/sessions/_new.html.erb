<%= form_for(:user, :url => session_path(:user)) do |f| %>

<div class="form-group">
  <%= f.text_field :email, class: "form-control"  %>
</div>

<div class="form-group">
  <%= f.password_field :password, class: "form-control"  %>
</div>
  <%= f.submit 'Sign in', class: 'btn btn-sm btn-primary' %>
  <span><a class='switch-sign-up-in'>Sign up</a></span>
  <div><%= link_to "Forgot your password?", new_password_path(:user) %></div>

<% end %>
