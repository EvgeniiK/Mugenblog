<%= form_for(:user, :url => session_path(:user)) do |f| %>

<div class="field">
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.password_field :password %>
</div>
  <%= f.submit 'Sign in' %>
<div class="field">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
</div>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>
